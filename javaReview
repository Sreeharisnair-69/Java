class Book{
	String title;
	String author;
	final int bookID;
	static int bookCounter = 100;
	static final String LIBRARY_NAME = "Central Library";
	boolean showLibrary;
	static int noOfBooks;
	
	Book(){
		this.title=title;
		this.author=author;
		this.bookID = bookCounter++;
	}
	
	Book(String title, String author){
		this.title=title;
		this.author=author;
		this.bookID = bookCounter++;
		noOfBooks++;
	}
	
	public void displayInfo(){
		System.out.println("Title: "+title);
		System.out.println("Author: "+author);
		System.out.println("Book ID: "+bookID+"\n");
	}
	
	public void displayInfo(boolean showLibrary) {
		if(showLibrary == true){
			System.out.println("Library Name: "+LIBRARY_NAME+"\n");
		}
	}
	
	public static void displayTotalBooks() {
		System.out.println("Number of books: "+noOfBooks);
	}
}
public class topicReview {
	public static void main(String [] args) {
		Book b1 = new Book("Title1","Author1");
		b1.displayInfo();
		b1.displayInfo(true);
		
		
		Book b2 = new Book("Title2","Author2");
		b2.displayInfo();
		b2.displayInfo(true);
		
		Book b3 = new Book("Title3","Author3");
		b3.displayInfo();
		b3.displayInfo(true);
		b3.displayTotalBooks();
	}
}
